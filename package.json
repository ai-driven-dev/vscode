{
  "name": "ai-driven-dev",
  "displayName": "AI-Driven Dev Config",
  "description": "Better VSCode code configuration to improve AI developer experience",
  "version": "0.1.5",
  "publisher": "ai-driven-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-driven-dev/vscode.git"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "typescript",
        "path": "./config/snippets/typescript.json"
      },
      {
        "language": "typescriptreact",
        "path": "./config/snippets/typescriptreact.json"
      }
    ],
    "recommendations": [
      "ms-azuretools.vscode-docker",
      "streetsidesoftware.code-spell-checker",
      "streetsidesoftware.code-spell-checker-french",
      "yzhang.markdown-all-in-one",
      "DavidAnson.vscode-markdownlint"
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+v",
        "command": "editor.action.pasteAs",
        "args": {
          "preferences": [
            "text.updateImports"
          ]
        }
      },
      {
        "key": "ctrl+shift+l",
        "command": "editor.action.selectHighlights",
        "when": "editorTextFocus"
      },
      {
        "key": "cmd+n",
        "command": "explorer.newFile"
      }
    ],
    "unwantedRecommendations": [],
    "configurationDefaults": {
      "explorer.compactFolders": false,
      "files.autoSave": "afterDelay",
      "files.autoSaveDelay": 500,
      "files.eol": "\n",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "explicit",
        "source.addMissingImports": "explicit"
      },
      "editor.formatOnPaste": true,
      "editor.wordWrap": "on",
      "editor.wordWrapColumn": 80,
      "editor.wrappingIndent": "same",
      "editor.minimap.enabled": false,
      "git.enabled": true,
      "git.autofetch": true,
      "git.confirmSync": false,
      "scm.diffDecorations": "all",
      "explorer.decorations.enabled": true,
      "git.statusBar.enabled": true,
      "workbench.editor.decorations.badges": true,
      "workbench.editor.showTabs": "multiple",
      "workbench.editor.wrapTabs": true,
      "workbench.editor.tabSizing": "fit",
      "workbench.editor.enablePreview": false,
      "workbench.editor.enablePreviewFromQuickOpen": false,
      "css.hover.documentation": false,
      "markdown.extension.toc.updateOnSave": true,
      "cSpell.userWords": [
        "ai-driven-dev"
      ],
      "windsurf.autocompleteSpeed": "fast",
      "windsurf.enableModelBasedAutoExecution": true,
      "typescript.updateImportsOnFileMove.enabled": "always"
    }
  },
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "build": "node setup.js",
    "prepare": "husky install",
    "local-install": "npm run test &&node setup.js && npx vsce package && code --install-extension *.vsix && rm -rf *.vsix",
    "publish": "bash ./scripts/publish.sh",
    "test": "vitest --watch=false"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "ovsx": "^0.10.1",
    "vitest": "^2.1.8",
    "vsce": "^2.15.0"
  },
  "lint-staged": {
    "README.md": [
      "npm run build"
    ],
    "config/*.json": [
      "npm run build"
    ],
    "config/**/*.json": [
      "npm run build"
    ]
  }
}