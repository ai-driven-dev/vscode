{
  "name": "ai-driven-dev",
  "displayName": "AI-Driven Dev",
  "description": "Optimized VSCode configuration for AI-powered development. Includes curated settings, keybindings, and extensions to enhance productivity with AI tools like GitHub Copilot, Cursor, and Windsurf.",
  "version": "0.3.0",
  "publisher": "ai-driven-dev",
  "scripts": {
    "compile": "tsc -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-driven-dev/vscode.git"
  },
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Formatters",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "productivity",
    "configuration",
    "settings",
    "keybindings"
  ],
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.93.0",
    "@vscode/vsce": "^3.2.2",
    "ovsx": "^0.10.1",
    "typescript": "^5.7.2"
  },
  "contributes": {
    "configurationDefaults": {
      "breadcrumbs.enabled": true,
      "explorer.compactFolders": false,
      "explorer.confirmDelete": false,
      "explorer.confirmDragAndDrop": false,
      "explorer.autoReveal": true,
      "outline.showVariables": false,
      "outline.showFields": false,
      "outline.showFunctions": true,
      "outline.collapseItems": "alwaysCollapse",
      "files.autoSave": "afterDelay",
      "files.autoSaveDelay": 1000,
      "files.eol": "\n",
      "editor.linkedEditing": true,
      "editor.renameOnType": true,
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true,
      "editor.formatOnSaveMode": "modificationsIfAvailable",
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "json.format.enable": true,
      "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
      },
      "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
      },
      "[markdown]": {
        "editor.codeActionsOnSave": {
          "source.fixAll.markdownlint": "true"
        }
      },
      "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
      },
      "eslint.validate": [
        "javascript",
        "typescript"
      ],
      "eslint.format.enable": true,
      "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.eslint": "always",
        "source.organizeImports": "always",
        "source.addMissingImports": "always"
      },
      "editor.wordWrap": "bounded",
      "editor.wordWrapColumn": 100,
      "editor.wrappingIndent": "same",
      "editor.minimap.enabled": false,
      "git.enabled": true,
      "git.autofetch": true,
      "git.confirmSync": false,
      "git.rebaseWhenSync": true,
      "scm.diffDecorations": "all",
      "workbench.editor.decorations.badges": true,
      "workbench.editor.showTabs": "multiple",
      "workbench.editor.wrapTabs": true,
      "workbench.editor.tabSizing": "fit",
      "workbench.editor.limit.enabled": true,
      "workbench.editor.limit.value": 8,
      "workbench.editor.enablePreview": false,
      "workbench.editor.enablePreviewFromQuickOpen": false,
      "css.hover.documentation": false,
      "markdown.extension.toc.updateOnSave": true,
      "markdown.extension.toc.levels": "2..6",
      "github.copilot.enable": {
        "*": true,
        "markdown": true
      },
      "cSpell.language": "en,fr",
      "cSpell.userWords": [
        "ai-driven-dev",
        "autofetch"
      ],
      "windsurf.autocompleteSpeed": "fast",
      "windsurf.cascadeCommandsAllowList": [
        "npm",
        "cd",
        "mkdir",
        "ls",
        "touch",
        "git",
        "mv",
        "cp",
        "pip",
        "python",
        "yarn",
        "pnpm",
        "docker",
        "docker-compose",
        "npx",
        "ldx",
        "pnpm",
        "pnpx",
        "pkill"
      ],
      "windsurf.autoExecutionPolicy": "shred",
      "windsurf.rememberLastModelSelection": true,
      "windsurf.openRecentConversation": false,
      "prettier.tabWidth": 2,
      "prettier.useTabs": false,
      "prettier.singleQuote": false,
      "prettier.trailingComma": "all",
      "prettier.bracketSpacing": true,
      "prettier.printWidth": 100,
      "prettier": {
        "overrides": [
          {
            "files": "*.jsonc",
            "options": {
              "parser": "json"
            }
          }
        ]
      },
      "typescript.updateImportsOnFileMove.enabled": "always",
      "javascript.updateImportsOnFileMove.enabled": "always",
      "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
      },
      "terminal.integrated.shellIntegration.enabled": true
    },
    "keybindings": [
      {
        "key": "cmd+k cmd+o",
        "command": "workbench.action.files.openFolder"
      },
      {
        "key": "ctrl+shift+v",
        "command": "editor.action.pasteAs",
        "args": {
          "preferences": [
            "text.updateImports"
          ]
        }
      },
      {
        "key": "cmd+n",
        "command": "explorer.newFile"
      },
      {
        "key": "ctrl+s",
        "command": "typescript.removeUnusedImports"
      },
      {
        "key": "ctrl+s",
        "command": "-markdown.extension.toc.update",
        "when": "resourceExtname == .md"
      },
      {
        "key": "f12",
        "command": "git.openFile",
        "when": "editorTextFocus"
      },
      {
        "key": "f12",
        "command": "editor.action.revealDefinition",
        "when": "editorFocus"
      },
      {
        "key": "shift+cmd+l",
        "command": "-addCursorsAtSearchResults"
      },
      {
        "key": "shift+cmd+l",
        "command": "editor.action.selectHighlights",
        "when": "editorFocus"
      },
      {
        "key": "shift+cmd+l",
        "command": "-windsurf.prioritized.chat.openNewConversationFromTerminal"
      },
      {
        "key": "shift+cmd+l",
        "command": "-windsurf.prioritized.chat.openNewConversation"
      },
      {
        "key": "shift+cmd+k",
        "command": "-aipopup.action.modal.generate"
      },
      {
        "key": "shift+cmd+k",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
      },
      {
        "key": "cmd+l",
        "command": "runCommands",
        "args": {
          "commands": [
            "workbench.action.closeSidebar",
            "aichat.focuschatpaneaction"
          ]
        }
      },
      {
        "key": "cmd+shift+b",
        "command": "workbench.action.toggleAuxiliaryBar"
      }
    ]
  },
  "extensionPack": [
    "ms-azuretools.vscode-docker",
    "streetsidesoftware.code-spell-checker",
    "streetsidesoftware.code-spell-checker-french",
    "yzhang.markdown-all-in-one",
    "davidanson.vscode-markdownlint",
    "esbenp.prettier-vscode",
    "eamodio.gitlens"
  ]
}