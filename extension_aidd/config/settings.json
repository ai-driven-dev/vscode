{
  /**
   ** EXPLORER
   **/

  // Disable compact folder display
  "explorer.compactFolders": false,

  // Remove warning when moving to trash
  "explorer.confirmDelete": false,

  // No confirmation when moving files
  "explorer.confirmDragAndDrop": false,

  // Auto open file in explorer when opened in editor
  "explorer.autoReveal": true,

  /**
   ** SIDEBAR
   **/

  // Beautiful outline view

  "outline.showVariables": false,
  "outline.showFields": false,
  "outline.showFunctions": true,
  "outline.collapseItems": "alwaysCollapse",

  /**
   ** FILES
   **/

  // Auto save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,

  // End of line
  "files.eol": "\n",

  /**
   ** EDITOR
   **/

  // Editing closing tag on type
  "editor.linkedEditing": true,

  // Format on save
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Format JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "json.format.enable": true,

  // Format HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },

  // Format CSS
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },

  // Format Markdown
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },

  // Enable auto formatting
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },

  // Menu tabs wrapped for better visibility
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",

  // Disable preview mode
  "editor.minimap.enabled": false,

  /**
   ** GIT
   **/

  // Enable git
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  // Git display info
  "scm.diffDecorations": "all",
  "workbench.editor.decorations.badges": true,

  /**
   ** WORKBENCH
   **/

  // Opened page on startup
  "workbench.startupEditor": "welcomePage",
  "window.restoreWindows": "none", // not allowed in extension

  // Wrap tabs for better visibility
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,

  // Disable preview mode for tabs
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  /**
   ** CSS
   **/

  // Disable CSS hover documentation
  "css.hover.documentation": false,

  /**
   ** EXTENSIONS
   **/

  /** Markdown **/

  // Update TOC on save
  "markdown.extension.toc.updateOnSave": true,

  /** Github Copilot **/

  // Enable Copilot for all languages, including markdown
  "github.copilot.enable": {
    "*": true,
    "markdown": true
  },

  // cSpell
  "cSpell.language": "en,fr",
  "cSpell.userWords": ["ai-driven-dev", "autofetch"],

  /** Windsurf **/

  // Fast autocomplete
  "windsurf.autocompleteSpeed": "fast",

  // Auto accept suggestions from chat
  "windsurf.enableModelBasedAutoExecution": true,

  // Allowed commands to be executed without confirmation
  "windsurf.cascadeCommandsAllowList": [
    "npm",
    "cd",
    "mkdir",
    "ls",
    "touch",
    "git",
    "mv",
    "cp"
  ],

  // Do not reopen past conversations
  "windsurf.openRecentConversation": false,

  /** Prettier **/

  // Simple configuration
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "none",
  "prettier.bracketSpacing": true,
  "prettier": {
    "overrides": [
      {
        "files": "*.jsonc",
        "options": {
          "parser": "json"
        }
      }
    ]
  },

  /**
   ** LANGUAGES
   **/

  /** Typescript **/

  // Update imports on file move
  "typescript.updateImportsOnFileMove.enabled": "always",

  /** Javascript **/
  "javascript.updateImportsOnFileMove.enabled": "always"
}