[
// Delete line (because of Cursor)
      {
           "key": "ctrl+shift+k",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
    },

  // Auto-import when pasting code
  {
      "key": "ctrl+shift+v",
      "command": "editor.action.pasteAs",
      "args": {
          "preferences": ["text.updateImports"]
      }
  },

  // Select all occurrences of the current selection (because of Windsurf)
  {
      "key": "ctrl+shift+l",
      "command": "editor.action.selectHighlights",
      "when": "editorTextFocus"
  },

 // Create a new file in the current directory (in explorer view)
  {
    "key": "cmd+n",
    "command": "explorer.newFile"
  },

  // Remove unused imports
  {
    "key": "ctrl+s",
    "command": "typescript.removeUnusedImports"
  },

  // Update TOC on save
  {
    "key": "ctrl+s",
    "command": "-markdown.extension.toc.update",
    "when": "resourceExtname == .md"
  }
]