{
  /**
   ** TELEMETRY
   **/

   // Disable telemetry
   "telemetry.telemetryLevel": "off",
   "telemetry.enableTelemetry": false,
   "telemetry.enableCrashReporter": false,
   "continue.telemetryEnabled": false,
   "gitlens.telemetry.enabled": false,

  /** 
   ** EXPLORER
   **/

  // Disable compact folder display
  "explorer.compactFolders": false,

  /** 
   ** EDITOR
   **/

   // Format on save
   "editor.formatOnSave": true,

   // Enable auto formatting
   "editor.codeActionsOnSave": {
     "source.fixAll.eslint": "explicit",
     "source.organizeImports": "explicit",
     "source.addMissingImports": "explicit"
   },

  // Update imports on paste
  "editor.formatOnPaste": true,
  "editor.pasteAs.preferences": [
    "text.updateImports"
  ],
  
  // Menu tabs wrapped for better visibility
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",

  // Disable preview mode
  "editor.minimap.enabled": false,

     /**
    ** GIT
    **/

    // Enable git
    "git.enabled": true,
    "git.autofetch": true,

    // Git display info
    "scm.diffDecorations": "all",
    "explorer.decorations.enabled": true,
    "git.statusBar.enabled": true,
    "workbench.editor.decorations.badges": true,

  /**
   ** WORKBENCH (TABS)
   **/

  // Wrap tabs for better visibility
  "workbench.editor.showTabs": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizing": "fit",

  // Disable preview mode for tabs
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  /**
   ** CSS
   **/

  // Disable CSS hover documentation
  "css.hover.documentation": false,

  /**
   ** EXTENSIONS
   **/

   /** Markdown **/

   // Update TOC on save
   "markdown.extension.toc.updateOnSave": true,

   // cSpell
   "cSpell.userWords": [
    "ai-driven-dev"
  ],

   /**
    ** LANGUAGES
    **/

    /** Typescript **/

    // Update imports on file move
   "typescript.updateImportsOnFileMove.enabled": "always"
}