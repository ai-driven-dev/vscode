{
  /** 
   ** EXPLORER
   **/

  // Disable compact folder display
  "explorer.compactFolders": false,

  /** 
   ** FILES
   **/

   // Auto save
   "files.autoSave": "afterDelay",
   "files.autoSaveDelay": 500,

   // End of line
   "files.eol": "\n",

  /** 
   ** EDITOR
   **/

   // Format on save
   "editor.formatOnSave": true,
   "editor.formatOnPaste": true,
   "editor.formatOnSaveMode": "modificationsIfAvailable",
   "editor.defaultFormatter": "esbenp.prettier-vscode",

   // Format JSON
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "json.format.enable": true,

   // Format Markdown
   "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },

   // Enable auto formatting
   "editor.codeActionsOnSave": {
     "source.fixAll.eslint": "explicit",
     "source.organizeImports": "explicit",
     "source.addMissingImports": "explicit"
   },
  
  // Menu tabs wrapped for better visibility
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",

  // Disable preview mode
  "editor.minimap.enabled": false,

     /**
    ** GIT
    **/

    // Enable git
    "git.enabled": true,
    "git.autofetch": true,
    "git.confirmSync": false,

    // Git display info
    "scm.diffDecorations": "all",
    "workbench.editor.decorations.badges": true,

  /**
   ** WORKBENCH (TABS)
   **/

  // Wrap tabs for better visibility
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizing": "fit",

  // Disable preview mode for tabs
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  /**
   ** CSS
   **/

  // Disable CSS hover documentation
  "css.hover.documentation": false,

  /**
   ** EXTENSIONS
   **/

   /** Markdown **/

   // Update TOC on save
   "markdown.extension.toc.updateOnSave": true,

   /** Github Copilot **/

   // Enable Copilot for all languages, including markdown
  "github.copilot.enable": {
    "*": true,
    "markdown": true
  },

   // cSpell
   "cSpell.userWords": [
    "ai-driven-dev",
    "autofetch"
  ],

  // Windsurf : fast autocomplete
  "windsurf.autocompleteSpeed": "fast",

  // Windsurf  : auto accept suggestions from chat
  "windsurf.enableModelBasedAutoExecution": true,

  // Prettier
  "prettier.requireConfig": true,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "none",
  "prettier.bracketSpacing": true,

   /**
    ** LANGUAGES
    **/

    /** Typescript **/

    // Update imports on file move
   "typescript.updateImportsOnFileMove.enabled": "always"
}